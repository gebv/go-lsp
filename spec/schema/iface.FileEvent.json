{
    "$id": "/FileEvent",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "DocumentUri": {
            "description": "A tagging type for string properties that are actually document URIs.",
            "type": "string"
        },
        "FileChangeType": {
            "description": "The file event type",
            "enum": [
                1,
                2,
                3
            ],
            "type": "number"
        }
    },
    "description": "An event describing a file change.",
    "properties": {
        "type": {
            "$ref": "/FileEvent#/definitions/FileChangeType",
            "description": "The change type."
        },
        "uri": {
            "$ref": "/FileEvent#/definitions/DocumentUri",
            "description": "The file's uri."
        }
    },
    "required": [
        "type",
        "uri"
    ],
    "type": "object"
}

